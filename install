#!/usr/bin/python

import os

from os.path import expanduser

home = expanduser('~')

if os.path.exists(home + '/.bash_profile'):
    print('.bash_profile already exists')
    print('moving the current .bash_profile to .bash_profile_backup')
    print('you may want to update your dotfiles')
    os.system('mv %s/.bash_profile %s/.bash_profile_backup' % (home, home))

os.system('echo source $HOME/dotfiles/bash/bash_profile.sh > ~/.bash_profile')

if os.path.exists(home + '/.vimrc'):
    print('.vimrc already exists')
    print('moving the current .vimrc to .vimrc_backup')
    print('you may want to update your dotfiles')
    os.system('mv %s/.vimrc %s/.vimrc_backup' % (home, home))

os.system('echo source $HOME/dotfiles/vim/vimrc > ~/.vimrc')
print('done!')
